{
  "presets": [ 
    [
      "next/babel",
      {
        "class-properties": {
          "loose": true
        }
      }
    ]
  ],
  "plugins": [
    "babel-plugin-transform-typescript-metadata",
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-private-property-in-object", { "loose": true }],
    ["@babel/plugin-proposal-private-methods", { "loose": true }],
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        "@components": "./src/ux/components",
        "@client": "./src/ux/client",
        "@utils": "./src/ux/common/utils",
        "@hooks": "./src/ux/common/hooks",
        "@styles": "./src/ux/assets/styles",
        "@images": "./src/ux/assets/images",
        "@config/*": "./src/ux/config/*",
        "@entity/*": "./src/server/entity/*",
        "@migration/*": "./src/server/migration/*",
        "@model/*": "./src/server/model/*",
        "@controller/*": "./src/server/controller/*",
        "@middleware/*": "./src/server/middleware/*",
        "@route": "./src/server/route",
        "@trpc-router/*": "./src/server/trpc-router/*"
      }
    }]
  ]
}